public class Solution {

    public static void main(String[] args) {
    Scanner x=new Scanner(System.in);
    int b=x.nextInt();
    int h=x.nextInt();
    int y1=x.nextInt();
    int y2=x.nextInt();
    int y3=x.nextInt();
    System.out.printf("Area of Triangle is %.2f\n",(float)((0.5) *b*h));
    System.out.printf("Perimeter of Triangle is %.2f",(float)(y1+y2+y3));
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
